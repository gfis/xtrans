<web-app>
    
    <display-name>File Transformations</display-name>
    <description>
        Transforms various file formats to and from XML
    </description>
    
    <!-- application parameters -->
    
    <!-- Servlets -->
    <servlet> 
        <servlet-name>XtransServlet</servlet-name>
        <servlet-class>org.teherba.xtrans.XtransServlet</servlet-class>
    </servlet>

    <servlet-mapping> 
        <servlet-name>XtransServlet</servlet-name>
        <url-pattern>/xtransservlet</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
