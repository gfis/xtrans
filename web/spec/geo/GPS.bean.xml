<record xmlns="http://www.teherba.org/2006/xtrans/Record"
		name="GPS" package="org.teherba.xtrans.geo" type="Bean" 
		remark="GPS tracking point data" sql="false" >
    <field name="longitude"    rem="eastern meridian, in degrees from Greenwich"   type="double"   />
    <field name="lattitude"    rem="northern circle , in degrees from equator"     type="double"   />
    <field name="dateTime"     rem="ISO date and time of measurement"              type="timestamp" />
    <field name="altitude"     rem="in m"                                          type="float"   />
    <field name="speed"        rem="relative to previous point, in km/h"           type="float"   />
    <field name="course"       rem="clockwise degrees: 0=N, 90=E, 180=S"           type="String"   />
</record>
