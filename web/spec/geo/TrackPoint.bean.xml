<record name="TrackPoint" package="org.teherba.xtrans.geo" type="Bean" order="LSB" code="ASCII"  
        remark="GPS track point data" sql="false" >
    <field name="longitude"    rem="eastern meridian, degree from Greenwhich"  len="10"     type="ascii"   />
    <field name="lattitude"    rem="northern eleveation, degree from equator"  len="10"     type="ascii"   />
    <field name="date"         rem="ISO date of measurement"                   len="10"     type="date"    />
    <field name="time"         rem="ISO time of measurement with seconds"      len= "8"     type="time"    />
    <field name="altitude"     rem="in m"                                      len= "8"     type="ascii"   />
    <field name="speed"        rem="relative to previous point, in km/h"       len= "8"     type="ascii"   />
    <field name="course"       rem="clockwise degrees: 0=N, 90=E, 180=S"       len= "8"     type="ascii"   />
</record>
